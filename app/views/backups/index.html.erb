<h1>Backup Log</h1>

<table>
  <thead>
  <table class="table table-striped">
    <tr>
      <th>System/Data Purpose</th>
      <th>Backup Type</th>
      <th>Environment</th>
      <th>Application</th>
      <th>Source Host</th>
      <th>Target Host</th>
      <th>Source Path</th>
      <th>Target Path</th>
      <th>Status</th>
      <th>Date</th>
      <!--<th></th>
      <th></th>-->
    </tr>
  </thead>

  <tbody>
    <% @backups.each do |backup| %>
      <tr>
        <td><%= backup.purpose %></td>
        <td><%= backup.type %></td>
        <td><%= backup.environment %></td>
        <td><%= backup.application %></td>
        <td><%= backup.sourcehost %></td>
        <td><%= backup.targethost %></td>
        <td><%= backup.sourcepath %></td>
        <td><%= backup.targetpath %></td>
        <td><%= backup.status %></td>
        <td><%= backup.date %></td>
        <!--<td><%= link_to 'Show', backup %></td>
        <td><%= link_to 'Edit', edit_backup_path(backup) %></td>
        <td><%= link_to 'Destroy', backup, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @backups %>
